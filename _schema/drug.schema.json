{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "drug.schema.json",
  "title": "Drug Entry",
  "description": "Schema for drug YAML frontmatter (drugs-detailed/*.md)",
  "type": "object",
  "required": ["name", "molecule", "era", "origin", "archetype", "ancestor", "swag_score", "image", "date_added"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Drug display name"
    },
    "molecule": {
      "type": "string",
      "description": "Chemical formula"
    },
    "era": {
      "type": "string",
      "enum": ["Ancient", "Modern"],
      "description": "Historical era classification"
    },
    "origin": {
      "type": "string",
      "description": "Geographic origin"
    },
    "archetype": {
      "type": "string",
      "enum": ["Freetekno", "Milady", "Acidhouse", "Chicago Detroit"],
      "description": "Associated archetype (note: no slash in drug files)"
    },
    "ancestor": {
      "type": "string",
      "description": "Associated ancestor culture"
    },
    "swag_score": {
      "type": ["integer", "null"],
      "description": "Rarity tier (1-5) or null"
    },
    "image": {
      "type": "string",
      "description": "Image filename"
    },
    "date_added": {
      "type": ["string", "null"],
      "description": "Date added in ISO format (YYYY-MM-DD) or null"
    }
  }
}
